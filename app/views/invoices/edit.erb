<!DOCTYPE html>
<html>
  <head>
    <title>Invoice Edit</title>
    <link rel='stylesheet' href="main.css" title='text/css'>
  </head>
  <body>
    <header>
      <h1 class="logo">LittleShop</h1>
      <nav class="navigation">
        <ul class="nav-links">
          <li class="nav-link"><a href="/merchants">Merchants</a></li>
          <li class="nav-link"><a href="/items">Items</a></li>
          <li class="nav-link"><a href="/invoices">Invoices</a></li>
        </ul>
      </nav>
    </header>
    <div class="sub-header">
      <h3>Invoice: <%= @invoice.id.to_s %> - <%= @invoice.status.capitalize %></h3>
    </div>
    <section>
      Status<br>
      <form action="/invoices/<%= @invoice.id %>" method="POST">
        <select name='invoice[status]' id='status-dropdown'>
          <option value='pending'>Pending</option>
          <option value='shipped'>Shipped</option>
          <option value='returned'>Returned</option>
        </select>
        <a class='cancel' href="/invoices/<%= @invoice.id %>"><button>Cancel</button></a>
        <input type="hidden" name="_method" value="PATCH">
        <button type='submit'>Update Invoice</button>
      </form>
    </section>
    <footer><p>Footer Place Holder</p></footer>
  </body>
</html>
